<Page x:Class="WpfAppMirea.Pages.AdminData.PageProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppMirea.Pages.AdminData"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageProfile">

    <Grid Background="LightGray">
        <StackPanel>
            <GroupBox Header="Имя пользователя:">
                <TextBlock 
                    FontSize="20pt"
                    Name="TxbNameUser"/>
            </GroupBox>
            <GroupBox Header="Логин пользователя:">
                <TextBlock 
                    FontSize="16pt"
                    Name="TxbLogin"/>
            </GroupBox>
            <GroupBox Header="Роль пользователя:">
                <TextBlock 
                    FontSize="16pt"
                    Name="TxbRole"/>
            </GroupBox>

            <Button 
                Content="Назад к таблице"
                Name="BtnBack"
                Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
