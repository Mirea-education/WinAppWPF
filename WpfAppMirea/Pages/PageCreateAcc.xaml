<Page x:Class="WpfAppMirea.Pages.PageCreateAcc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppMirea.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCreateAcc">

    <Grid>
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <GroupBox Header="Введите логин:">
                <TextBox />
            </GroupBox>

            <GroupBox Header="Введите пароль:">
                <TextBox />
            </GroupBox>

            <GroupBox Header="Повторите введеный пароль:">
                <TextBox />
            </GroupBox>

            <StackPanel Orientation="Horizontal">
                <Button Content="Назад" 
                        Name="BtnBack"
                        Click="BtnBack_Click"
                        Height="45" Width="120"/>
                <Button Content="Сохранить" Height="45" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
